<div class="post">
  <h2><%= @post.title %></h2>
  <p>
    <%= @post.body %>  
  </p>
  <div class="tags">
    <% @tags.each do |tag| %>
      <%= tag.name %>
    <% end %>
  </div>
  <a href="/post/<%= @post.id %>/edit">Edit post</a>
  <form action="/post/<%= @post.id %>/delete" method="POST">
    <input type="submit" value="Delete">
  </form>
</div>
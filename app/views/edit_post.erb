<form id="edit_post" action="/post/<%= @post.id %>" method="POST">
  <label for="title">Title</label>
  <input type="text" id="title" name="title" value="<%= @post.try(:title) %>">
  <br>
  <br>
  <textarea name="body" form="edit_post" cols="30" rows="10" value="<%= @post.try(:body) %>"><%= @post.try(:body) %></textarea>
  <br>
  <br>
  <label for="tag">Tags</label><input type="text" id="tag" name="tags">
  <br>
  <input type="submit" value="Submit">
</form>